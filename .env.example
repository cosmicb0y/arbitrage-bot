# Arbitrage Bot - Exchange API Credentials
# Copy this file to .env and fill in your API keys

# Binance
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# Coinbase (CDP API with ES256/ECDSA signing)
# IMPORTANT: Must use ECDSA key type when creating API key (EdDSA NOT supported)
# API Key ID: Full key path from CDP Portal (format: organizations/{org_id}/apiKeys/{key_id})
COINBASE_API_KEY_ID=
# Secret Key: Full PEM with BEGIN/END headers (newlines escaped as \n, wrapped in quotes)
# Example: "-----BEGIN EC PRIVATE KEY-----\nMHQC...\n-----END EC PRIVATE KEY-----"
COINBASE_SECRET_KEY=""

# Upbit
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# Bithumb
BITHUMB_API_KEY=
BITHUMB_SECRET_KEY=

# Bybit
BYBIT_API_KEY=
BYBIT_SECRET_KEY=
